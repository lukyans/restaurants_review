<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
  <%= link_to 'Back', restaurants_path %>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @restaurant.user_id %>
</p>

<%= render 'reviews/form' %>
<h2>Reviews</h2>
<div class="mb-3 h4">
  Average Rating:
  <%= @restaurant.rating %>
</div>
<%= render @reviews if @reviews.any? %>
